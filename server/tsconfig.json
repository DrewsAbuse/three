{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "exclude": ["node_modules", "dist"]
}